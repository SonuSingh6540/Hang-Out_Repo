@model enContest
@{
    ViewBag.Title = "Contest || Create";
    var sn = 1;
    var ActionName = "create";
    if (Model != null)
    {
        ActionName = "update";
    }
}

@section scripts{
    <script src="https://cdn.ckeditor.com/4.11.4/standard/ckeditor.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace('Description');
    </script>
}


<div class="row heading-bg  bg-red">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h5 class="txt-light">Contest</h5>
    </div>
    <!-- Breadcrumb -->
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <ol class="breadcrumb">
            <li><a href="#">Contest</a></li>
            <li class="active"><span>Create</span></li>
        </ol>
    </div>
    <!-- /Breadcrumb -->
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default card-view">
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="form-wrap">
                        @using (Html.BeginForm(ActionName, "contest", FormMethod.Post))
                        {
                            <h6 class="txt-dark capitalize-font"><i class="icon-list mr-10"></i>add advertisement</h6>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label mb-10">Description</label>
                                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", Rows = 10, Cols = 60 })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label mb-10">Start Date</label>
                                        @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control", type = "date", required = "" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label mb-10">End Date</label>
                                        @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control", type = "date", required = "" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <button class="btn btn-success btn-icon left-icon mr-10"> <i class="fa fa-check"></i> <span>save</span></button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



