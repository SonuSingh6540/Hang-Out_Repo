@model List<enUser>
@{
    ViewBag.Title = "List";
    var sn = 1;
}

@section styles{
    <style type="text/css">
        @@media (min-width: 768px) {
            .modal-dialog {
                width: 800px !important;
                margin: 30px auto;
            }
        }

        .modal-header {
            padding: 15px;
            border-bottom: 1px solid #e5e5e5;
            background: brown;
            color: #fff;
        }
    </style>
}
@section scripts{
    <script src="~/CDN/Content/Scripts/jquery.table2excel.js"></script>
    <script type="text/javascript">
        function getMemeber(refCode) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("getmember", "user")',
                data: { sponsorID: refCode },
                success: function (data) {
                    $("#model-table").find("tr:gt(0)").remove();
                    var i = 1;
                    $.each(data, function (indx, val) {
                        var tr = "<tr class=\"item-editable\"> <td class=\"media-middle text-center\"> " + i + ". </td><td class=\"media-middle\"> " + val.Name + " </h5> </td><td class=\"media-middle\"> " + val.Contact + " </td><td class=\"media-middle\"> " + val.E_Mail + " </td><td class=\"media-middle\"> " + val.Country + " </td></tr>"
                        $(".table-model").append(tr);
                        i++;
                    });
                }
            })
        }
        $('#tbl').DataTable();

        function excel() {
            $("#tbl").table2excel({
                exclude: ".noExl",
                name: "Excel Document Name",
                filename: "Hangout-UserList",
                fileext: ".xls",
                exclude_img: true,
                exclude_links: true,
                exclude_inputs: true
            });
        }
    </script>
}


<div class="row heading-bg bg-green">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h5 class="txt-light">User</h5>
    </div>
    <!-- Breadcrumb -->
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <ol class="breadcrumb">
            <li><a href="#">User</a></li>
            <li class="active"><span>List</span></li>
        </ol>
    </div>
    <!-- /Breadcrumb -->
</div>
<!-- Row -->
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">User's list</h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="table-wrap">
                        <div class="table-responsive">
                            <table id="tbl" class="table table-hover display  pb-30">
                                <thead>
                                    <tr>
                                        <td>S.No</td>
                                        <th>Name</th>
                                        <th>Password</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Reference Code</th>
                                        <th>Country</th>
                                        <th>View Members</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <td>S.No</td>
                                        <th>Name</th>
                                        <th>Password</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Reference Code</th>
                                        <th>Country</th>
                                        <th>View Members</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="item-editable">
                                            <td>
                                                @sn
                                            </td>
                                            <td>
                                                @Html.Raw(item.Name)
                                            </td>
                                            <td>
                                                @item.Password
                                            </td>
                                            <td>
                                                @item.E_Mail
                                            </td>
                                            <td>
                                                @item.Contact
                                            </td>
                                            <td>
                                                @item.Reference_Code
                                            </td>
                                            @if (item.Country == 1)
                                            {
                                                <td class="media-middle">
                                                    India
                                                </td>
                                            }
                                            else
                                            {
                                                <td class="media-middle">
                                                    U.S.
                                                </td>
                                            }
                                            <td>
                                                <a href="" data-toggle="modal" data-target="#myModal" target="_blank" style="color:#000" onclick="getMemeber('@item.Reference_Code')"><i class="fa fa-eye" aria-hidden="true" style="margin-right:5px"></i>View</a>
                                            </td>
                                        </tr>
                                        sn++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Members List</h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="model-table" class="table table-striped table-bordered table-model">
                        <tr>
                            <td class="media-middle text-center">
                                S.no
                            </td>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Country</th>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

