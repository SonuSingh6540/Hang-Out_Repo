@model List<enQuery>
@{
    ViewBag.Title = "TopicAndIdea";
    var sn = 1;
}
@section scripts{
    <script type="text/javascript">
        function getConformation(id,t_Type,type) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("queryconfirmation", "query")',
                data: {qID:id,t_type:t_Type,confType:type},
                success: function (data) {
                    if(data == "success")
                    {
                        
                    }
                }
            })
        };
        $('#tbl').DataTable()
    </script>
}



<div class="container-fluid">
    <!-- .row -->
    <form class="form-horizontal">
        <div class="row">
            <div class="col-xs-12">
                <div class="with_border with_padding">
                    <div class="row admin-table-filters">
                        <div class="col-lg-9">
                            <h4>Topic & Ideas Queries</h4>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" id="tbl">
                            <thead>
                                <tr>
                                    <td class="media-middle text-center">
                                        S.no
                                    </td>
                                    <th>Name:</th>
                                    <th>Phone:</th>
                                    <th>Email:</th>
                                    <th>Type:</th>
                                    <th>Message:</th>
                                    <th>Action:</th>
                                </tr>    
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="item-editable">
                                        <td class="media-middle text-center">
                                            @sn
                                        </td>
                                        <td class="media-middle">
                                            <h5>
                                                @item.Name
                                            </h5>
                                        </td>
                                        <td>
                                            <div class="media">
                                                <div class="media-body">
                                                    <h5>
                                                        @item.Contact
                                                    </h5>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="media-middle">
                                            @item.E_Mail
                                        </td>
                                        <td class="media-middle">
                                            @item.Topic_Type
                                        </td>
                                        <td class="media-middle">
                                            @item.Message
                                        </td>
                                        <td class="media-middle">
                                            <button type="submit" class="theme_button" onclick="getConformation(@item.User_ID,@item.Topic_Type,1)" id="appr_@item.ID">Approve</button>
                                            <button type="submit" class="theme_button" onclick="getConformation(@item.ID,@item.Topic_Type,2)">Reject</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- .table-responsive -->
                </div>
                <!-- .with_border -->
            </div>
            <!-- .col-* -->
        </div>
    
    </form>
</div>
<!-- .container -->
