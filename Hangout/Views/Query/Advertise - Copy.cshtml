@model List<enQuery>
@{
    ViewBag.Title = "Advertise";
    var sn = 1;
}
@section styles{
    <link href="~/CDN/Content/Css/ImageModel.css" rel="stylesheet" />
}
@section scripts{
    <script type="text/javascript">
        var modal = document.getElementById('myModal');
        var modalImg = document.getElementById("img01");

        function getImage(path) {
            var fullPath = path.replace("~", "..");
            modal.style.display = "block";
            modalImg.src = fullPath;
        }
        var span = document.getElementsByClassName("close")[0];
        span.onclick = function () {
            modal.style.display = "none";
        }
        $('#tbl').DataTable();
    </script>
}
<div class="container-fluid">
    <!-- .row -->
        <div class="row">
            <div class="col-xs-12">
                <div class="with_border with_padding">
                    <div class="row admin-table-filters">
                        <div class="col-lg-9">
                            <h4>Advertise Queries</h4>
                        </div>
                    </div>
                    <!-- .row -->

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" id="tbl">
                            <thead>
                                <tr>
                                    <td class="media-middle text-center">
                                        S.no
                                    </td>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Subject</th>
                                    <th>Message</th>
                                    <th>File</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var AdvertisementPath = Helper.UserAdvertisementImagePath(item.User_ID) + item.File_Name;
                                    <tr class="item-editable">
                                        <td class="media-middle text-center">
                                            @sn.
                                        </td>
                                        <td class="media-middle">
                                            <h5>
                                                @item.Name
                                            </h5>
                                        </td>
                                        <td class="media-middle">
                                            @item.E_Mail
                                        </td>
                                        <td>
                                            <div class="media">
                                                <div class="media-body">
                                                    <h5>
                                                        @item.Contact
                                                    </h5>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="media-middle">
                                            @item.Subject
                                        </td>
                                        <td class="media-middle">
                                            @item.Message
                                        </td>
                                        <td class="media-middle">
                                            <a href='@Url.Action("gallery","query",new { advertisementID = item.ID,userID = item.User_ID })'>Go to gallery</a>
                                        </td>
                                    </tr>
                                    sn++;
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- .table-responsive -->
                </div>
                <!-- .with_border -->
            </div>
            <!-- .col-* -->
        </div>
        <!-- .row -->
</div>
<!-- .container -->
<div id="myModal" class="modal">
    <span class="close">&times;</span>
    <img class="modal-content" id="img01">
    <div id="caption"></div>
</div>

