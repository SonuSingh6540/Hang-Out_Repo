@model List<enPayment>
@{
    ViewBag.Title = "Payment";
    var sn = 1;
}

@section scripts{
    <script type="text/javascript">
        $('#tbl').DataTable();
    </script>
}
<div class="row">
    <div class="col-xs-12">
        <div class="with_border with_padding">

            <div class="row admin-table-filters">
                <div class="col-lg-9">
                    <h4>Debate List</h4>
                </div>
            </div>
            <!-- .row -->
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="tbl">
                    <thead>
                        <tr>
                            <th>
                                S.no
                            </th>
                            <th>Name</th>
                            <th>E-Mail</th>
                            <th>Transection ID</th>
                            <th>Referecne Code</th>
                            <th>Amount</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="item-editable">
                                <td class="media-middle text-center">
                                    @sn
                                </td>
                                <td class="media-middle">
                                    <h5>
                                        @Html.Raw(item.Name)
                                    </h5>
                                </td>
                                <td class="media-middle">
                                    @Html.Raw(item.E_Mail)
                                </td>

                                <td>
                                    <div class="media">
                                        <div class="media-body">
                                            <h5>
                                                @item.Transection_ID
                                            </h5>
                                        </div>
                                    </div>
                                </td>
                                <td class="media-middle">
                                    @item.Reference_Code
                                </td>
                                <td class="media-middle">
                                    @item.Amount
                                </td>
                                <td class="media-middle">
                                    @Helper.ConvertDateTimeToDate(item.InsertedOn)
                                </td>
                            </tr>
                            sn++;
                        }
                    </tbody>
                </table>
            </div>
            <!-- .table-responsive -->
        </div>
        <!-- .with_border -->
    </div>
    <!-- .col-* -->
</div>
<!-- .row -->

