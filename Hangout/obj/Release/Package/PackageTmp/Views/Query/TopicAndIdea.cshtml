@model List<enQuery>
@{
    ViewBag.Title = "TopicAndIdea";
    var sn = 1;
}
@section scripts{
    <script type="text/javascript">
        function getConformation(id, t_Type, type) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("queryconfirmation", "query")',
                data: { qID: id, t_type: t_Type, confType: type },
                success: function (data) {
                    if (data == "success") {

                    }
                }
            })
        };
    </script>
    <script src="/vendors/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="/dist/js/dataTables-data.js"></script>
    <script type="/text/javascript">
        $('#tbl').DataTable();
    </script>
}

<div class="row heading-bg bg-green">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h5 class="txt-light">Queries</h5>
    </div>
    <!-- Breadcrumb -->
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <ol class="breadcrumb">
            <li><a href="#">Queries</a></li>
            <li class="active"><span>Topic And Idea's</span></li>
        </ol>
    </div>
    <!-- /Breadcrumb -->
</div>
<!-- Row -->
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">Topic And Ideas</h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="table-wrap">
                        <div class="table-responsive">
                            <table id="datable_1" class="table table-hover display  pb-30">
                                <thead>
                                    <tr>
                                        <td>S.No</td>
                                        <th>Name</th>
                                        <th>Phone</th>
                                        <th>Email</th>
                                        <th>Type</th>
                                        <th>Message</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <td>S.No</td>
                                        <th>Name</th>
                                        <th>Phone</th>
                                        <th>Email</th>
                                        <th>Type</th>
                                        <th>Message</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="item-editable">
                                            <td>
                                                @sn
                                            </td>
                                            <td>
                                                @Html.Raw(item.Name)
                                            </td>
                                            <td>
                                                @item.Contact
                                            </td>
                                            <td>
                                                @item.E_Mail
                                            </td>
                                            <td>
                                                @item.Topic_Type
                                            </td>
                                            <td>
                                                @item.Message
                                            </td>
                                            <td>
                                                <button type="submit" class="theme_button" onclick="getConformation(@item.User_ID,@item.Topic_Type,1)" id="appr_@item.ID">Approve</button>
                                                <button type="submit" class="theme_button" onclick="getConformation(@item.ID,@item.Topic_Type,2)">Reject</button>
                                            </td>
                                        </tr>
                                        sn++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

